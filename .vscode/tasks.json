{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build the project",
      "command": "npx",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        // "close": true,
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "args": ["tsc", "-p", "."],
      "problemMatcher": "$tsc"
    },
    {
      "label": "swc: build the project",
      "command": "npx",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "revealProblems": "onProblem",
        // "close": true,
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "args": ["swc", "./src", "-d", "dist"],
      "problemMatcher": "$tsc"
    }
  ]
}
